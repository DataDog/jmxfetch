<assembly>
    <id>uber</id>
    <formats>
        <format>jar</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <files>
        <file>
            <source>src/main/config/classworlds.conf</source>
            <outputDirectory>WORLDS-INF/conf</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>WORLDS-INF/lib</outputDirectory>
            <outputFileNameMapping>
                ${artifact.artifactId}.jar
            </outputFileNameMapping>
            <scope>compile</scope>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>*:*</include>
            </includes>
            <excludes>
                <exclude>jline:jline</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>classworlds:classworlds-boot</include>
                <include>jline:jline</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>WORLDS-INF</outputDirectory>
            <outputFileNameMapping>
                ${artifact.artifactId}.jar
            </outputFileNameMapping>
            <includes>
                <include>classworlds:classworlds</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>